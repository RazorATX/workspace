{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build XML Documentation (All Files)",
            "type": "shell",
            "command": "make build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Specific XML File",
            "type": "shell",
            "command": "make build FILE=${input:xmlFile}",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Build sample-documentation.xml",
            "type": "shell",
            "command": "make build FILE=sample-documentation.xml",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "make clean",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Rebuild XML Documentation",
            "type": "shell",
            "command": "make rebuild",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Install Build Tools",
            "type": "shell",
            "command": "make install",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Documentation Site (with Sidebar)",
            "type": "shell",
            "command": "make site FILE=${input:xmlFile}",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Build User Guide Site",
            "type": "shell",
            "command": "make site FILE=user-guide.xml",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Complete Documentation Portal",
            "type": "shell",
            "command": "make docs",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "xmlFile",
            "type": "promptString",
            "description": "Enter the XML filename to build",
            "default": "sample-documentation.xml"
        }
    ]
}